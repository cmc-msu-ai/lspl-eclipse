<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ru.lspl.analyzer.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="ru.lspl.analyzer.rcp.Perspective"
            id="ru.lspl.analyzer.rcp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ru.lspl.analyzer.rcp.perspective">
         <view
               id="ru.lspl.analyzer.rcp.views.WordsView"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="ru.lspl.analyzer.rcp.views.MatchesView"
               minimized="false"
               relationship="stack"
               relative="ru.lspl.analyzer.rcp.views.WordsView">
         </view>
         <view
               id="ru.lspl.analyzer.rcp.views.PatternsView"
               minimized="false"
               ratio="0.6"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ru.lspl.analyzer.rcp.editors.DocumentEditor"
            extensions="txt"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.editors.DocumentEditor"
            name="%editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="ru.lspl.analyzer.rcp"
            name="%category.name">
      </category>
      <view
            category="ru.lspl.analyzer.rcp"
            class="ru.lspl.analyzer.rcp.views.PatternsView"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.views.PatternsView"
            name="%view.name">
      </view>
      <view
            category="ru.lspl.analyzer.rcp"
            class="ru.lspl.analyzer.rcp.views.WordsView"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.views.WordsView"
            name="%view.name.0">
      </view>
      <view
            category="ru.lspl.analyzer.rcp"
            class="ru.lspl.analyzer.rcp.views.MatchesView"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.views.MatchesView"
            name="%view.name.1"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="%menu.label"
               mnemonic="%menu.mnemonic">
            <command
                  commandId="ru.lspl.analyzer.rcp.newDocument"
                  label="%command.label"
                  style="push">
            </command>
            <command
                  commandId="ru.lspl.analyzer.rcp.openDocument"
                  label="%command.label.0"
                  style="push">
            </command>
            <separator
                  name="ru.lspl.analyzer.rcp.fileMenuSeparator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="%command.label.1"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  label="%command.label.2"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="%command.label.3"
                  style="push">
            </command>
            <separator
                  name="ru.lspl.analyzer.rcp.fileMenuSeparator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="%command.label.4"
                  style="push"
                  tooltip="%command.tooltip">
            </command>
         </menu>
         <menu
               id="patternsMenu"
               label="%menu.label.0"
               mnemonic="%menu.mnemonic.0">
            <command
                  commandId="ru.lspl.analyzer.rcp.clearPatterns"
                  label="%command.label.5"
                  style="push">
            </command>
            <command
                  commandId="ru.lspl.analyzer.rcp.importPatterns"
                  label="%command.label.6"
                  style="push">
            </command>
            <command
                  commandId="ru.lspl.analyzer.rcp.exportPatterns"
                  label="%command.label.7"
                  style="push">
            </command>
         </menu>
         <menu
               id="windowMenu"
               label="%menu.label.1"
               mnemonic="%menu.mnemonic.1">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="%command.label.8"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="ru.lspl.analyzer.rcp.documentToolbar">
            <command
                  commandId="ru.lspl.analyzer.rcp.analyzeDocument"
                  label="%command.label.9"
                  style="push">
               <visibleWhen>
                  <reference
                        definitionId="ru.lspl.analyzer.rcp.documentEditorActive">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="ru.lspl.analyzer.rcp.commands.NewDocumentCommand"
            id="ru.lspl.analyzer.rcp.newDocument"
            name="%command.name">
      </command>
      <command
            id="ru.lspl.analyzer.rcp.analyzeDocument"
            name="%command.name.0">
      </command>
      <command
            defaultHandler="ru.lspl.analyzer.rcp.commands.OpenDocumentHandler"
            id="ru.lspl.analyzer.rcp.openDocument"
            name="%command.name.1">
      </command>
      <command
            defaultHandler="ru.lspl.analyzer.rcp.commands.ClearPatternsHandler"
            id="ru.lspl.analyzer.rcp.clearPatterns"
            name="%command.name.2">
      </command>
      <command
            defaultHandler="ru.lspl.analyzer.rcp.commands.ExportPatternsHandler"
            id="ru.lspl.analyzer.rcp.exportPatterns"
            name="%command.name.3">
      </command>
      <command
            defaultHandler="ru.lspl.analyzer.rcp.commands.ImportPatternsHandler"
            id="ru.lspl.analyzer.rcp.importPatterns"
            name="%command.name.4">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ru.lspl.analyzer.rcp.commands.AnalyzeDocumentHandler"
            commandId="ru.lspl.analyzer.rcp.analyzeDocument">
         <enabledWhen>
            <with
                  variable="activeEditor">
               <test
                     property="ru.lspl.analyzer.rcp.analysisNeeded"
                     value="true">
               </test>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="ru.lspl.analyzer.rcp.documentEditorActive">
         <with
               variable="activeEditorId">
            <equals
                  value="ru.lspl.analyzer.rcp.editors.DocumentEditor">
            </equals>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="ru.lspl.analyzer.rcp.testers.DocumentStateTester"
            id="ru.lspl.analyzer.rcp.documentStateTester"
            namespace="ru.lspl.analyzer.rcp"
            properties="analysisNeeded"
            type="org.eclipse.ui.IEditorPart">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="ru.lspl.analyzer.rcp.preferences.DocumentEditorPreferencePage"
            id="ru.lspl.analyzer.rcp.preferences.DocumentEditorPreferencePage"
            name="%page.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="ru.lspl.analyzer.rcp.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ru.lspl.analyzer.rcp.application"
            name="Lspl Analyzer">
         <property
               name="appName"
               value="Lspl Analyzer">
         </property>
         <property
               name="aboutText"
               value="Lspl Analyzer RCP">
         </property>
      </product>
   </extension>

</plugin>
