<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ru.lspl.analyzer.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="ru.lspl.analyzer.rcp.Perspective"
            id="ru.lspl.analyzer.rcp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ru.lspl.analyzer.rcp.perspective">
         <view
               id="ru.lspl.analyzer.rcp.views.WordsView"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="ru.lspl.analyzer.rcp.views.MatchesView"
               minimized="false"
               relationship="stack"
               relative="ru.lspl.analyzer.rcp.views.WordsView">
         </view>
         <view
               id="ru.lspl.analyzer.rcp.views.PatternsView"
               minimized="false"
               ratio="0.7"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ru.lspl.analyzer.rcp.editors.DocumentEditor"
            extensions="txt"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.editors.DocumentEditor"
            name="Document Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="ru.lspl.analyzer.rcp"
            name="Lspl Category">
      </category>
      <view
            category="ru.lspl.analyzer.rcp"
            class="ru.lspl.analyzer.rcp.views.PatternsView"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.views.PatternsView"
            name="Patterns View">
      </view>
      <view
            category="ru.lspl.analyzer.rcp"
            class="ru.lspl.analyzer.rcp.views.WordsView"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.views.WordsView"
            name="Words View">
      </view>
      <view
            category="ru.lspl.analyzer.rcp"
            class="ru.lspl.analyzer.rcp.views.MatchesView"
            icon="icons/sample.gif"
            id="ru.lspl.analyzer.rcp.views.MatchesView"
            name="Matches View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="ru.lspl.analyzer.rcp.commands.NewDocument"
                  label="New Document"
                  style="push">
            </command>
            <separator
                  name="ru.lspl.analyzer.rcp.fileMenuSeparator">
            </separator>
            <command
                  commandId="ru.lspl.analyzer.rcp.commands.Exit"
                  label="Quit"
                  style="push"
                  tooltip="Exits the application">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="ru.lspl.analyzer.rcp.documentToolbar">
            <command
                  commandId="ru.lspl.analyzer.rcp.commands.AnalyzeDocument"
                  label="Analyze"
                  style="push">
               <visibleWhen>
                  <reference
                        definitionId="ru.lspl.analyzer.rcp.documentEditorActive">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="ru.lspl.analyzer.rcp.commands.ExitHandler"
            id="ru.lspl.analyzer.rcp.commands.Exit"
            name="Exit">
      </command>
      <command
            defaultHandler="ru.lspl.analyzer.rcp.commands.NewDocumentCommand"
            id="ru.lspl.analyzer.rcp.commands.NewDocument"
            name="New Document">
      </command>
      <command
            id="ru.lspl.analyzer.rcp.commands.AnalyzeDocument"
            name="Analyze Document">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ru.lspl.analyzer.rcp.commands.AnalyzeDocumentHandler"
            commandId="ru.lspl.analyzer.rcp.commands.AnalyzeDocument">
         <enabledWhen>
            <with
                  variable="activeEditor">
               <test
                     property="ru.lspl.analyzer.rcp.analysisNeeded"
                     value="true">
               </test>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="ru.lspl.analyzer.rcp.documentEditorActive">
         <with
               variable="activeEditorId">
            <equals
                  value="ru.lspl.analyzer.rcp.editors.DocumentEditor">
            </equals>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="ru.lspl.analyzer.rcp.testers.DocumentStateTester"
            id="ru.lspl.analyzer.rcp.documentStateTester"
            namespace="ru.lspl.analyzer.rcp"
            properties="analysisNeeded"
            type="org.eclipse.ui.IEditorPart">
      </propertyTester>
   </extension>

</plugin>
